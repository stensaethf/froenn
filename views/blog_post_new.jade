extends layout

block content
    .xl-row.xl-gap-4.col.gap-4.justify
        .xl-fill-2
            //- left column.
        .xl-fill-6
            h1 New blog post
            form.form.col.gap-2(action='/blog/new/' method='POST' role='form' enctype='multipart/form-data')
                label
                    input(name="title" placeholder="Title" required)
                label
                    textarea(name="desc" placeholder='Additional details' required style='min-height: 250px;')
                label
                    button(type='submit') Save post
        .xl-fill-2
            //- right column.