extends layout

block content
  h1 Welcome back
  if user
    p Looks like you're already logged in, #{user.f_n} #{user.l_n}...
  else
    form(action='/blog/login/', method='POST', role='form')
      label
        p Email
        input(type='text', name='email' placeholder='Email' required)
      label
        p Password
        input(type='password', name='password', placeholder='Password' required)
      div
        button(type='submit') Log In