extends layout

block content
	.xl-row.xl-gap-4.col.gap-4.justify
		.xl-fill-2
			//- left column.
		.xl-fill-6
			.post
				if post
					h1 
						a(href='/blog/post/#{post.slug}')= post.title
					br
					| #{post.body}
				else
					| Seems like something went wrong...
		.xl-fill-2
			//- right column.